<main
  class="mx-3 mb-3 md:flex md:mx-0">
  <section class="shadow-lg bg-base-200 rounded-box w-center">
   <Bonfire.UI.Social.PageHeaderLive
      :if={current_user(assigns) != nil}
      page_title={@page_title}
    />
    <div class="border-t-8 border-base-300 md:mx-0 text-base-content">
      <Bonfire.UI.Social.FeedLive 
