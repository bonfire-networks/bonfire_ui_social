<main class="h-full md:flex md:mx-0">
  <section class="w-full h-full mx-auto md:rounded md:shadow bg-base-100">
    <Bonfire.UI.Social.PageHeaderLive
      page_title={@page_title}
    >
      <#slot><div /></#slot>
    </Bonfire.UI.Social.PageHeaderLive>
    <div class="md:mx-0 text-base-content">
      <Bonfire.UI.Social.FeedLive 
        id={@feed_id}
        feed={@feed}
        page_info={@page_info}
        showing_within={@showing_within}
      />
    </div>
  </section>
</main>
