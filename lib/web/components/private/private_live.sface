<div class="mx-4 overflow-hidden bg-white border-t-8 border-gray-100 dark:border-gray-600 lg:mx-0">

  <div :if={not is_list(@feed) or length(@feed) == 0} class="p-4 text-center dark:bg-gray-700">
    <div class="mb-3 text-3xl">üßê</div>
    <span class="text-base font-medium text-gray-700 dark:text-gray-100">{l "Take a deep breath..."}</span>
  </div>

  <ul :if={length(@feed)>0} class="divide-y divide-gray-200">

    <li :for={%{activity: activity} <- @feed}>
      <LiveRedirect to={"#{path(Bonfire.Data.Social.Message, e(activity, :object_id, nil))}"} class="block hover:bg-gray-50">
        <div class="flex items-center px-3 py-4">
          <div class="flex-1 min-w-0 sm:flex sm:items-center sm:justify-between">
            <div class="truncate">
              <div class="flex">
                <p class="text-xs text-pink-600 truncate">{e(activity, :subject_profile, :name, nil)}</p>
              </div>
              <div class="mt-1">
                <p class="text-sm text-gray-600 truncate font-regular">
                {r( e(activity, :object, :name, nil) || e(activity, :object, :post_content, :summary, nil) || e(activity, :object, :post_content, :html_body, nil) )}
                </p>
                <div class="flex items-center mt-1 text-xs text-gray-500">
                  <p><time datetime={"#{date_from_now(activity)}"}>{date_from_now(activity)}</time></p>
                </div>
              </div>
            </div>
            <div class="flex-shrink-0 mt-4 sm:mt-0 sm:ml-5">
