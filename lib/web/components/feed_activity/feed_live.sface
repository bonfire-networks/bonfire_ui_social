<div
  role="feed"
  aria-live="assertive"
  aria-atomic="true"
  class="feed">
    <div class="flex flex-col mx-auto max-w-7xl">
      <div :if={not is_list(@feed) or length(@feed) == 0} class="p-4 text-center">
        <div class="mb-3 text-3xl">🧐</div>
        <span class="text-base font-medium text-gray-700 dark:text-gray-100">{l "Take a deep breath..."}</span>
      </div>
    <div
      :if={is_list(@feed) or length(@feed) > 0}
      id="feed_future" 
      phx-update="prepend" 
      class={"divide-y dark:divide-gray-600 border-b border-gray-600"}>
      <article
        :for={entry <- @feed_future}
        id={e(entry, :activity, :id, e(entry, :activity, :object, :id, "unknown-activity"))}
        role="article"
        tabIndex="0"
        aria-label="user activity"
        class="lg:px-3">
        <ActivityLive
          activity={e(entry, :activity, entry)}
        />
      </article>
    </div>
    <div id="feed_past" phx-update={e(assigns, :feed_update_mode, "replace")} class="divide-y dark:divide-gray-600">
      <article
        :for={entry <- @feed}
        id={e(entry, :activity, :id, e(entry, :activity, :object, :id, "unknown-activity"))}
        role="article"
        tabIndex="0"
        aria-label="user activity"
        class="lg:px-3">
        <ActivityLive activity={e(entry, :activity, entry)} />
      </article>
    </div>

    <Bonfire.UI.Social.LoadMoreLive live_handler={Bonfire.Social.Feeds} page_info={@page_info} target={@myself} />

    </div>
</div>
