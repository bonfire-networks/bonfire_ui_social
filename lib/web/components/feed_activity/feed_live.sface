<div
  id={@id}
  role="feed"
  aria-live="assertive"
  aria-atomic="true"
  class="feed">
    <div class="flex flex-col mx-auto max-w-7xl">

    <div :if={not is_list(@feed) or length(@feed) == 0} class="p-4 text-center">
      <div class="mb-3 text-3xl">🧐</div>
      <span class="text-base font-medium text-base-content">{l "Take a deep breath..."}</span>
    </div>
      
    <div 
      :if={is_list(@feed) or length(@feed) > 0}
      id={"feed:"<>@id} 
      data-id="feed" 
      phx-update={e(assigns, :feed_update_mode, "append")} 
      class="divide-y divide-base-300">
      <div
        :for={entry <- @feed}
        id={Atom.to_string(e(assigns, :showing_within, :feed))<> ":activity:" <> e(entry, :id, e(entry, :activity, :id, e(entry, :activity, :object, :id, nil))) || "unknown-"<>Pointers.ULID.generate}
        >
        <ActivityLive 
          activity={e(entry, :activity, entry)}
          showing_within={e(assigns, :showing_within, nil)}
          />
      </div>
    </div>

      <Bonfire.UI.Social.LoadMoreLive 
        :if={e(assigns, :hide_load_more, false) != true}
        live_handler={Bonfire.Social.Feeds} 
        page_info={@page_info} 
        target={@myself} 
      />

    </div>
</div>
