<div
  x-data="{modal_flagging_activity: false}"
  aria-haspopup="true"
  class="dropdown dropdown-end feed_activity">
  <div 
    tabindex="0"
    class="feed_activity_action">
    <span class="feed_activity_icon">
      <Solid.DotsHorizontalIcon class="w-5 h-5 lg:w-4 lg:h-4" />
    </span>
    <span id="more-menu" class="feed_activity_text"><span class="hidden lg:block">{l "More"}</span></span>
  </div>
  <ul
    tabindex="0"
    class="p-2 shadow menu dropdown-content bg-base-100 rounded-box w-52"
    role="menu"
    aria-orientation="vertical"
    aria-labelledby="more-menu">
    <Bonfire.UI.Social.FlagActionLive 
      object={@object}
      activity={@activity}
      flagged={@flagged}
    />
  </ul>
</div>