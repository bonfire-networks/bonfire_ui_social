{#if @object_id not in e(assigns, :following, []) and e(assigns, :my_follow, nil)==nil }
    <button 
    :on-click="Bonfire.Social.Follows:follow" 
    phx-value-id={@object_id} 
    type="button" 
    class={e(assigns, :class, "border border-gray-500 group inline-flex items-center px-4 py-2 text-sm leading-5 font-medium rounded-md text-gray-300 hover:bg-gray-600 hover:text-gray-200 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-200 active:bg-gray-700 transition ease-in-out duration-150")}>
       <svg class="w-4 h-4 mr-2 text-gray-300 group-hover:text-gray-200" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path><path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path></svg>
       {l "Follow"} {e(assigns, :label, "")}
    </button>
{#else}
    <button 
        :on-click="Bonfire.Social.Follows:unfollow" 
        phx-value-id={@object_id} 
        type="button" 
        class={e(assigns, :class, "border border-gray-500 group inline-flex border-blueGray-400 items-center px-4 py-2 text-sm leading-5 font-medium rounded-md text-gray-400 hover:bg-gray-600 hover:text-gray-200 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-200 active:bg-gray-700 transition ease-in-out duration-150")}>
        <svg class="w-4 h-4 mr-2 text-gray-400 group-hover:text-gray-200" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.78-1.781zm4.261 4.26l1.514 1.515a2.003 2.003 0 012.45 2.45l1.514 1.514a4 4 0 00-5.478-5.478z" clip-rule="evenodd"></path><path d="M12.454 16.697L9.75 13.992a4 4 0 01-3.742-3.741L2.335 6.578A9.98 9.98 0 00.458 10c1.274 4.057 5.065 7 9.542 7 .847 0 1.669-.105 2.454-.303z"></path></svg>
        {l "Unfollow"} { e(assigns, :label, "")}
    </button>
{/if}
