<div class="sticky top-0 z-40 flex flex-shrink-0 w-full h-16 px-3 mb-4 bg-gray-800 border-b border-blueGray-700 lg:justify-between">
  <div class="flex items-center flex-shrink-0">
    <LiveRedirect to={path(Bonfire.Common.Config.get!(:home_page))}>
      <div class="flex items-center space-x-2">
        <div class="w-10 h-10 bg-center bg-no-repeat bg-contain" style={"background-image: url(" <> Bonfire.Common.Config.get([:ui, :theme, :instance_logo], '')  <> ")"}></div>
        <div class="text-base font-medium tracking-wide text-gray-300">{Bonfire.Common.Config.get([:ui, :theme, :instance_name], '')}</div>
      </div>
    </LiveRedirect>
  </div>

  <div class="items-center hidden space-x-3 lg:flex">
    <Bonfire.UI.Social.SearchLive class="ml-10" />
  </div>

  <div class="flex items-center space-x-3">
    <div class="flex items-center">

      <Bonfire.UI.Social.ChangeThemeLive />

      <span class="inline-flex ">
        <Link to={path(:switch_user)} class="btn btn-primary">
            {l "Select User"}
        </Link>
      </span>
      <span class="inline-flex ml-3">
          <a href="/logout" class="btn btn-secondary">
            {l "Log out"}
          </a>
      </span>
    </div>
  </div>
</div>

