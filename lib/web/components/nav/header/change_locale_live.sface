<select 
id="change_locale" 
name="Bonfire.Common.Localise.Cldr[default_locale]"
class="w-full max-w-xs select select-bordered" 
phx-change="locale-changed" 
phx-hook="ChangeLocaleHook">
  {#for locale <- Localise.known_locales()}
    <option class=""
      value={locale}
      selected={@locale==locale}
    >
    {Localise.locale_name(locale)}
    </option>
  {#else}
    <option>No localisation available</option>
  {/for}
</select>
