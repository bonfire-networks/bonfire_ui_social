<Bonfire.UI.Common.WidgetLive 
  widget_title={e(@widget_title, "Notifications")}
  >
    <:action>
      <LivePatch class="text-xs normal-case btn btn-xs btn-outline" to={path(:notifications)}>
        {l "View more"}
      </LivePatch>
    </:action>
    
    <Bonfire.UI.Social.FeedLive 
      class="pl-0 showing_within:widget"
      {...load(current_user(@__context__))}
    />
</Bonfire.UI.Common.WidgetLive>