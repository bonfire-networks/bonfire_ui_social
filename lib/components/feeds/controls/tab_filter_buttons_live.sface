<div class="flex gap-1 items-center justify-evenly" id="tab-filter-buttons-container">
  <div
    style={if should_hide_button?(:post, :object_types, assigns), do: "display: none;", else: ""}
    class="tooltip tooltip-bottom w-full"
    data-tip="Show all posts"
    data-switch="post"
    class="w-full flex-1"
  >
    <button
      data-id="filter-posts"
      class={@get_button_class.(:post, :object_types, @feed_filters)}
      phx-click="set_filter"
      phx-value-toggle="object_types"
      phx-value-toggle_type="post"
      phx-value-toggle_value={@get_tab_toggle_value.(:post, :object_types, @feed_filters)}
      phx-value-tab_mode="true"
      phx-target={@event_target}
    >
      <#Icon iconify="dashicons:text-page" class="w-5 h-5" />
      <span class="sr-only">{l("Posts")}</span>
    </button>
  </div>

  <div
    style={if not extension_enabled?(:bonfire_ui_reactions, @__context__) or
         should_hide_button?(:boost, :activity_types, assigns),
       do: "display: none;",
       else: ""}
    class="tooltip tooltip-bottom w-full"
    data-tip="Show only boosts"
    data-switch="boost"
    class="w-full flex-1"
  >
    <button
      data-id="filter-boosts"
