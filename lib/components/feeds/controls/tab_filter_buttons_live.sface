      phx-value-toggle_value={@get_tab_toggle_value.(:boost, :activity_types, @feed_filters)}
      phx-value-tab_mode="true"
      phx-target={@event_target}
    >
      <#Icon iconify="lucide:refresh-cw" class="w-4 h-4" />
      <span class="sr-only">{l("Boosts")}</span>
    </button>
  </div>

