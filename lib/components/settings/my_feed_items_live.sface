<!-- <form name="settings" phx-change="Bonfire.Common.Settings:set"> -->
<Bonfire.UI.Social.Settings.MyFeedItemLive
  label={l("Activities from people I follow")}
  key={:followed_users}
  disabled
  force_checked
  scope={@scope}
/>

<Bonfire.UI.Common.SettingsToggleLive
  :if={module_enabled?(Bonfire.Classify.Category)}
  label={l("Activities from groups I follow")}
  keys={[Bonfire.Social.Feeds, :my_feed_includes, :followed_categories]}
  default_value
  scope={@scope}
  compact
/>

<form phx-change="Bonfire.Common.Settings:set">
  <Bonfire.UI.Common.SettingsToggleLive
    name={l("Boosts")}
    keys={[Bonfire.Social.Feeds, :my_feed_includes, :boost]}
    default_value
    scope={@scope}
    compact
  />
</form>

<form phx-change="Bonfire.Common.Settings:set">
  <Bonfire.UI.Common.SettingsToggleLive
    name={l("Replies")}
    keys={[Bonfire.Social.Feeds, :my_feed_includes, :reply]}
    default_value
    scope={@scope}
    compact
  />
</form>

<form phx-change="Bonfire.Common.Settings:set">
  <Bonfire.UI.Common.SettingsToggleLive
    name={l("Follows")}
    keys={[Bonfire.Social.Feeds, :my_feed_includes, :follow]}
    default_value={false}
    scope={@scope}
    compact
  />
</form>

<form phx-change="Bonfire.Common.Settings:set">
  <Bonfire.UI.Common.SettingsToggleLive
    name={if @scope != :instance, do: l("My own activities", else: l("User's own activities"))}
    keys={[Bonfire.Social.Feeds, :my_feed_includes, :outbox]}
    default_value
    scope={@scope}
    compact
  />
</form>

<form :if={@scope == :instance} phx-change="Bonfire.Common.Settings:set">
  <Bonfire.UI.Common.SettingsToggleLive
    name={l("Notifications")}
    keys={[Bonfire.Social.Feeds, :my_feed_includes, :notifications]}
    default_value
    scope={@scope}
    compact
  />
</form>

