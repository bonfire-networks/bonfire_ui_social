                <LiveRedirect
                  aria-label={e(@character, :username, "") <> " profile"}
                  class="font-semibold"
                  to={path(@character)}
                >
                  {#if @object_id == current_user_id(@__context__)}
                    {l("You")}
                  {#else}
                    {e(@profile, :name, nil) || e(@character, :username, nil)}
